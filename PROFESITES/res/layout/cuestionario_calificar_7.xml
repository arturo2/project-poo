<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/preg_calificar_7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/preguntas_calificar_7"
        android:textColor="@color/white"
        android:textSize="35sp"
        android1:gravity="center" />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignRight="@+id/preg_calificar_7"
        android1:layout_marginBottom="34dp"
        android1:layout_marginRight="14dp"
        android1:text="@string/siguiente" />

    <RadioGroup
        android1:id="@+id/pregCalif7"
        android1:layout_width="270dp"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/preg_calificar_7"
        android1:layout_centerHorizontal="true" >

        <RadioButton
            android1:id="@+id/pregCalif7_1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_conoc_necesarios"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif7_2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_conoc_generales"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif7_3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_dominio_completo"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif7_4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_dominio_completo_y_mas"
            android1:textColor="@color/white"
            android1:textSize="20sp" />
    </RadioGroup>

</RelativeLayout>