<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/preg_calificar_8"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/preguntas_calificar_8"
        android:textColor="@color/white"
        android:textSize="35sp"
        android1:gravity="center" />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignRight="@+id/preg_calificar_8"
        android1:layout_marginBottom="34dp"
        android1:layout_marginRight="14dp"
        android1:text="@string/siguiente" />

    <RadioGroup
        android1:id="@+id/pregCalif8"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/button1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="31dp" >

        <RadioButton
            android1:id="@+id/pregCalif8_1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_muy_pocas"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif8_2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_pocas"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif8_3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_bastantes"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif8_4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_muchas"
            android1:textColor="@color/white"
            android1:textSize="20sp" />
    </RadioGroup>

</RelativeLayout>