<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/preg_test_4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/preguntas_test_4"
        android:textColor="@color/white"
        android:textSize="35sp"
        android1:gravity="center" />

    <RadioGroup
        android:id="@+id/pregTest4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android1:layout_marginLeft="60dp" >

        <RadioButton
            android1:id="@+id/pregTest4_1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_no_me_interesa"
       		android:textSize="20sp"
            android1:textColor="@color/white" />

        <RadioButton
            android:id="@+id/pregTest4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_regular"
       		android:textSize="20sp"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/pregTest4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_buena"
       		android:textSize="20sp"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/pregTest3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_didactica"
       		android:textSize="20sp"
            android:textColor="@color/white" />
    </RadioGroup>

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignRight="@+id/preg_test_4"
        android1:layout_marginBottom="30dp"
        android1:layout_marginRight="14dp"
        android1:text="@string/siguiente" />

</RelativeLayout>