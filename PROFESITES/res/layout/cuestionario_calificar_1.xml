<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/preg_calificar_1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/preguntas_calificar_1"
        android:textColor="@color/white"
        android:textSize="35sp"
        android1:gravity="center" />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignRight="@+id/preg_calificar_1"
        android1:layout_marginBottom="30dp"
        android1:layout_marginRight="14dp"
        android1:text="@string/siguiente" />

    <RadioGroup
        android1:id="@+id/pregCalif1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/preg_calificar_1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="32dp" >

        <RadioButton
            android1:id="@+id/pregCalif1_1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_nada_o_poca"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif1_2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_poca"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif1_3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_bastante"
            android1:textColor="@color/white"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/pregCalif1_4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/res_demasiada"
            android1:textColor="@color/white"
            android1:textSize="20sp" />
    </RadioGroup>

</RelativeLayout>